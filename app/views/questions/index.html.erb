<div class="table_wrap">

<h2>Need help with Ruby-on-Rails? Get solutions here.</h2>

<%= link_to "New Question", new_question_path, class: 'post_new' %>

<table summary="Questions">
  <% @questions.each do |question| %>
  <tr>
    <td class="title">
			<%= link_to question.title, question %>
		</td>
    <td class="content">
      <%= truncate( question.content, :length => 65 ) %>
    </td>
    <td class="content"> 
      <%= pluralize( question.answers.count, "reply") %>
    </td>
  </tr>
  <% end %>
</table>
</div>
<%= paginate @questions %>